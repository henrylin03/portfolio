---
import type { NavLink } from "./index.astro";

interface Props {
	navLinks: NavLink[];
	class?: string;
}

const { navLinks, class: className } = Astro.props;
---

<ul class:list={["menu menu-horizontal", className]}>
  {
    navLinks.map((link) => (
      <li class="prose">
        <a
          href={link.href}
          class="no-underline hover:underline underline-offset-4 bg-transparent"
        >
          {link.label}
        </a>
      </li>
    ))
  }
</ul>
