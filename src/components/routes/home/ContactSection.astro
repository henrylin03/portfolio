---
import type { SocialMediaLink } from "@/data/contactDetails";

interface Props {
  socialMediaLinks: SocialMediaLink[];
  contactEmail: string;
}

const { socialMediaLinks, contactEmail }: Props = Astro.props;
---

<section id="contact" class="my-48">
  <h2 class="decorative-font text-8xl font-light">Get in contact.</h2>
  <div class="flex flex-col items-center">
    <a
      role="button"
      class="btn rounded-4xl px-24 py-12 text-6xl font-light btn-xl"
      href={`mailto: ${contactEmail}`}>{contactEmail}</a
    >
    {socialMediaLinks.map((link) => <p>{link.label}</p>)}
  </div>
</section>
