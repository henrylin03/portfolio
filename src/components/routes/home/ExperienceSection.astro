---
import type { Workplace } from "@/data/workplaces";
import { Image } from "astro:assets";

interface Props {
  workplaces: Workplace[];
}

const { workplaces } = Astro.props;
---

<section class="mx-auto max-w-500 px-20 py-50">
  <h2 class="my-12 text-8xl font-light">Experience</h2>
  <ul class="flex items-center gap-20">
    {
      workplaces.map((w) => (
        <li class="flex gap-4">
          <figure class="sketched grid h-25 w-25 place-items-center rounded-2xl border-2">
            <Image
              src={w.img}
              alt={w.employer}
              loading="lazy"
              class="h-16 w-16"
            />
          </figure>
          <div class="flex flex-col gap-2">
            <h3>{w.employer}</h3>
            <p>{w.position}</p>
            <p>
              {w.startMonthYear} - {w.endMonthYear}
            </p>
          </div>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .sketched {
    border-top-left-radius: 255px 15px;
    border-top-right-radius: 15px 225px;
    border-bottom-right-radius: 225px 15px;
    border-bottom-left-radius: 15px 255px;
  }
</style>
