---
import type { Workplace } from "@/data/workplaces";
import { Image } from "astro:assets";

interface Props {
  workplaces: Workplace[];
}

const { workplaces } = Astro.props;
---

<section class="mx-auto prose max-w-500 px-20 py-50">
  <h2 class="text-8xl font-light">Experience</h2>
  <ul class="list-none p-0">
    {
      workplaces.map((w) => (
        <li>
          <Image
            src={w.img}
            alt={w.employer}
            loading="lazy"
            width="100"
            height="100"
          />
          <div class="flex flex-col gap-2">
            <h3>{w.employer}</h3>
            <p>{w.position}</p>
            <p>
              {w.startDate} - {w.endDate}
            </p>
          </div>
        </li>
      ))
    }
  </ul>
</section>
