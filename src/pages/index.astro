---
import ExperienceSection from "@/components/routes/home/ExperienceSection.astro";
import Hero from "@/components/routes/home/Hero.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import githubIcon from "@/assets/icons/github.svg";
import linkedinIcon from "@/assets/icons/linkedin.svg";

const SOCIALS = [
  {
    label: "LinkedIn",
    href: "https://linkedin.com/in/henrylin03",
    icon: linkedinIcon,
    classes: "opacity-70",
  },
  {
    label: "GitHub",
    href: "https://github.com/henrylin03/",
    icon: githubIcon,
    classes: "opacity-80",
  },
